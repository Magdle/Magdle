---
import Layout from '../layouts/Layout.astro';
import Game from '../components/game.jsx';
---

<Layout title="Magdle - Devinez l'admin du jour !">
	<main class="w-full max-w-5xl mx-auto px-4">
		
		<h1 class="text-4xl md:text-5xl text-center text-slate-100 font-extrabold pt-10 tracking-tighter">
			Magdle
		</h1>
		<h2 class="text-xl md:text-2xl font-normal text-center text-slate-400 mb-10">
				Devinez l'admin du jour !
			</h2>
        <Game client:load />

		<div class="mt-10 text-center">
			<a
				href="/neuille/index.html"
				class="group inline-flex items-center justify-center gap-3 rounded-full border border-amber-300/70 bg-gradient-to-r from-amber-300 to-yellow-400 px-8 py-3.5 text-slate-950 font-extrabold tracking-wide shadow-[0_8px_30px_rgba(251,191,36,0.35)] transition-all duration-300 hover:scale-[1.03] hover:shadow-[0_12px_36px_rgba(251,191,36,0.5)] active:scale-[0.99] focus:outline-none focus-visible:ring-2 focus-visible:ring-amber-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
				aria-label="Acc&eacute;der au classement Neuille"
			>
				Acc&eacute;der au classement Neuille
				<span aria-hidden="true" class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-slate-950/90 text-amber-300 transition-transform duration-300 group-hover:translate-x-1">&rarr;</span>
			</a>
		</div>
        
	</main>
</Layout>
